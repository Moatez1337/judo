{% extends 'base.html.twig' %}

{% block title %}Hello TechniqueListingController!{% endblock %}

{% block body %}

    <h1>Judo Techniques</h1>

    <div class="container">
            <div class="row">
                {% for technique in techniques %}
                    <div class="col-md-6 col-sm-12 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ technique.name }} (Category: {{ technique.category }})</h5>
                                <iframe width="100%" height="315" src="{{ technique.video | replace({'watch?v=': 'embed/'}) }}"
                                        frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                                </iframe>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
    </div>

{% endblock %}
